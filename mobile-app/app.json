{
  "expo": {
    "entryPoint": "./App.js",
    "name": "Smart Ayurvedic Crop Advisor",
    "slug": "smart-ayurvedic-crop-advisor",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartayurvediccropadvisor",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "VYAAS uses your location to auto-detect your state and district for crop recommendations."
      }
    },
    "android": {
      "package": "com.smartayurvediccropadvisor",
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    }
  }
}
